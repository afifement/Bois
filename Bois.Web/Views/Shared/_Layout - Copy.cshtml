<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>Aj Transport</title>
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">


    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css" rel="stylesheet" type="text/css" />
    <link href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css" rel="stylesheet" type="text/css" />
    <link href="../Content/plugins/daterangepicker/daterangepicker-bs3.css" rel="stylesheet" type="text/css" />
    <link href="../Content/bootstrap/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="../Content/dist/css/AdminLTE.min.css" rel="stylesheet" type="text/css" />
    <link href="../Content/dist/css/skins/_all-skins.min.css" rel="stylesheet" type="text/css" />
    <link href="../Content/plugins/iCheck/flat/blue.css" rel="stylesheet" type="text/css" />
    <link href="../Content/plugins/morris/morris.css" rel="stylesheet" type="text/css" />
    <link href="../Content/plugins/jvectormap/jquery-jvectormap-1.2.2.css" rel="stylesheet" type="text/css" />
    <link href="../Content/plugins/datepicker/datepicker3.css" rel="stylesheet" type="text/css" />
    <link href="../Content/plugins/daterangepicker/daterangepicker-bs3.css" rel="stylesheet" type="text/css" />
    <link href="../Content/plugins/bootstrap-wysihtml5/bootstrap3-wysihtml5.min.css" rel="stylesheet" type="text/css" />
    <!-- DATA TABLES -->
    <link href="../Content/plugins/datatables/dataTables.bootstrap.css" rel="stylesheet" type="text/css" /> 

</head>
<body class="sidebar-mini wysihtml5-supported skin-blue-light">

    <div class="wrapper">

        <header class="main-header">
            <a href="" class="logo">
                <span class="logo-mini"><b>A</b>jT</span>
                <span class="logo-lg"><b>Aj</b> Transport</span>
            </a>
            <nav class="navbar navbar-static-top" role="navigation">

                <a href="#" class="sidebar-toggle" data-toggle="offcanvas" role="button">
                    <span class="sr-only">Toggle navigation</span>
                </a>
                <div class="navbar-custom-menu">
                    <ul class="nav navbar-nav">

                        <li class="dropdown user user-menu">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                @if (Session["image"] == null)
                                {
                                    <img src="../Content/dist/img/user2-160x160.jpg" class="user-image" alt="User Image" />
                                }
                                else
                                {
                                    <img src="@Url.Action("getImg", "Home", new { newWidth = 25, newHeight = 25 })" class="user-image" user-image"" alt="User Image" />

                                }
                                
                                <span class="hidden-xs">@User.Identity.Name</span>
                            </a>
                            <ul class="dropdown-menu">
                                <!-- User image -->
                                <li class="user-header">
                                   @if (Session["image"] == null)
                                {
                                    <img src="../Content/dist/img/user2-160x160.jpg" class="user-image" alt="User Image" />
                                }
                                   else
                                   {
                                    <img src="@Url.Action("getImg", "Home", new { newWidth = 25, newHeight = 25 })" class="user-image" alt="User Image" />

                                   }
                                    <p>
                                        @User.Identity.Name
                                        <small> </small>
                                    </p>
                                </li>

                                <li class="user-footer">
                                    <div class="pull-left">
                                        <a href="/Account/MonProfil" class="btn btn-default btn-flat">Profil</a>
                                    </div>
                                    <div class="pull-right">
                                        <a href="/Account/LogOff" class="btn btn-default btn-flat">Déconnexion</a>
                                    </div>
                                </li>
                            </ul>
                        </li>


                    </ul>
                </div>
                <!-- static devision -->
                <div class="middle-logo">
                    <span class="logo-lg">
                        <b></b>
                    </span>
                </div>
            </nav>
        </header>
        <!-- Left side column. contains the logo and sidebar -->
        <aside class="main-sidebar">
            <!-- sidebar: style can be found in sidebar.less -->
            <section class="sidebar">
                <!-- Sidebar user panel -->
                <div class="user-panel">
                    <div class="pull-left image">
                       @if (Session["image"] == null)
                                {
                                    <img src="../Content/dist/img/user2-160x160.jpg" class="user-image" alt="User Image" />
                                }
                       else
                       {
                        <img src="@Url.Action("getImg", "Home", new { newWidth = 90, newHeight = 90 })" class="user-image" alt="User Image" />

                       }
                    </div>
                    <div class="pull-left info">
                        <p>@User.Identity.Name</p>
                        <a href="/Account/MonProfil"><i class="fa fa-circle text-success"></i> Online</a>
                    </div>
                </div>

                <ul class="sidebar-menu">
                    <li class="header">Menu de navigation</li>
                    <li class="active treeview">
                        <a href="/Home/Index">
                            <i class="fa fa-dashboard"></i> <span>Accueil</span>
                        </a>

                    </li>

                    <li class="active treeview">
                        <a href="/Account/MonProfil">
                            <i class="fa fa-table"></i> <span>MonProfil</span>
                        </a>

                    </li>

                    @if (User.IsInRole("admin") || User.IsInRole("employe") || User.IsInRole("manager") || User.IsInRole("superadmin"))
                    {
                        <li class="treeview">
                            <a href="#">
                                <i class="fa fa-files-o"></i> <span>Demande client</span>
                                <i class="fa fa-angle-left pull-right"></i>
                            </a>
                            <ul class="treeview-menu">
                                <li><a href="/DemandeClient/AjouterDemande"><i class="fa fa-circle-o"></i> Ajouter une demande</a></li>
                                <li><a href="/DemandeClient/RechercherDemande"><i class="fa fa-circle-o"></i>Recherche des demandes</a></li>
                            </ul>
                        </li>
                    }


                    @if (User.IsInRole("admin") || User.IsInRole("employe") || User.IsInRole("chauffeur") || User.IsInRole("manager") || User.IsInRole("superadmin"))
                    {
                        <li class="treeview">
                            <a href="#">
                                <i class="fa fa-book"></i>
                                <span>Gestion de documents</span>
                                <i class="fa fa-angle-left pull-right"></i>
                            </a>
                            <ul class="treeview-menu">
                                @if (User.IsInRole("admin") || User.IsInRole("employe") || User.IsInRole("manager") || User.IsInRole("superadmin"))
                                {
                                    <li><a href="/GestionDocument/DocumentClient"><i class="fa fa-circle-o"></i>Documents Clients</a></li>
                                    <li><a href="/GestionDocument/DocumentChauffeur"><i class="fa fa-circle-o"></i>Documents Chauffeur</a></li>
                                    <li><a href="/GestionDocument/DocumentVehicule"><i class="fa fa-circle-o"></i>Documents Véhicule</a></li>
                                }
                                @if (User.IsInRole("admin") || User.IsInRole("manager") || User.IsInRole("superadmin"))
                                {
                                    <li><a href="/GestionDocument/DocumentEmploye"><i class="fa fa-circle-o"></i>Documents Employé</a></li>
                                }
                                @if (User.IsInRole("admin") || User.IsInRole("chauffeur") || User.IsInRole("manager") || User.IsInRole("superadmin"))
                                {
                                    <li><a href="/GestionDocument/DocumentDemande"><i class="fa fa-circle-o"></i>Documents Demande Effectuée</a></li>
                                }
                            </ul>
                        </li>
                    }

                    @if (User.IsInRole("admin") || User.IsInRole("manager") || User.IsInRole("superadmin"))
                    {
                        <li class="treeview">
                            <a href="#">
                                <i class="fa fa-laptop"></i>
                                <span>Gestion des comptes</span>
                                <i class="fa fa-angle-left pull-right"></i>
                            </a>
                            <ul class="treeview-menu">
                                <li><a href="/GestionCompte/FicheClient"><i class="fa fa-circle-o"></i>Fiche client</a></li>
                                <li><a href="/GestionCompte/Collaborateur"><i class="fa fa-circle-o"></i>Fiche Collaborateur</a></li>
                               
                            </ul>
                        </li>
                    }

                    @if (User.IsInRole("admin") || User.IsInRole("employe") || User.IsInRole("adminpark") || User.IsInRole("manager") || User.IsInRole("superadmin"))
                    {
                        <li class="treeview">
                            <a href="#">
                                <i class="fa fa-th"></i>
                                <span>Gestion des véhicules</span>
                                <i class="fa fa-angle-left pull-right"></i>
                            </a>
                            <ul class="treeview-menu">
                                @if (User.IsInRole("admin") || User.IsInRole("employe") || User.IsInRole("manager") || User.IsInRole("superadmin"))
                                {
                                    <li><a href="/GestionVehicule/FicheVehicule"><i class="fa fa-circle-o"></i>Fiche véhicule</a></li>
                                }
                                <li><a href="/GestionVehicule/SuiviMaintenance"><i class="fa fa-circle-o"></i>Suivi de maintenance</a></li>
                                <li><a href="/GestionVehicule/Intervention"><i class="fa fa-circle-o"></i>Planification des interventions</a></li>

                            </ul>
                        </li>
                    }

                    @if (User.IsInRole("admin") || User.IsInRole("employe") || User.IsInRole("manager") || User.IsInRole("superadmin"))
                    {
                        <li class="treeview">
                            <a href="#">
                                <i class="fa fa-calendar"></i>
                                <span>Planification</span>
                                <i class="fa fa-angle-left pull-right"></i>
                            </a>
                            <ul class="treeview-menu">
                                <li><a href="/Planification/PlanningChauffeur"><i class="fa fa-circle-o"></i>Planning Chauffeur</a></li>
                                <li><a href="/Planification/PlanningDisponibilite"><i class="fa fa-circle-o"></i>Planning Disponibilité Chauffeur</a></li>
                            </ul>
                        </li>

                        <li class="treeview">
                            <a href="#">
                                <i class="fa fa-edit"></i>
                                <span>Gestion des demandes</span>
                                <i class="fa fa-angle-left pull-right"></i>
                            </a>
                            <ul class="treeview-menu">
                                <li><a href="/GestionDemande/DemandeClient"><i class="fa fa-circle-o"></i>Demandes du client</a></li>
                                <li><a href="/GestionDemande/DemandeChauffeur"><i class="fa fa-circle-o"></i>Demandes pour un chauffeur</a></li>
                                <li><a href="/GestionDemande/PlanningVehicule"><i class="fa fa-circle-o"></i>Planning Véhicule</a></li>

                            </ul>
                        </li>
                    }

                </ul>
            </section>

        </aside>

        <div class="content-wrapper">
            <!-- Render view -->
            @RenderBody()
        </div>


        <footer class="main-footer">
            <div class="pull-right hidden-xs">
                <b>Version</b> 1.0
            </div>
            <strong>Copyright &copy; 2015 <a href="">Aj Transport France</a>.</strong> Tous droits réservés.
        </footer>


    </div>


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryui")
    @Scripts.Render("~/bundles/jqueryval")
    <script src="../Content/plugins/jQuery/jQuery-2.1.4.min.js"></script>

    <script src="../Content/plugins/datatables/jquery.dataTables.min.js" type="text/javascript"></script>
    <script src="../Content/plugins/datatables/dataTables.bootstrap.min.js" type="text/javascript"></script>
    <!-- SlimScroll -->
    <script src="../Content/plugins/slimScroll/jquery.slimscroll.min.js" type="text/javascript"></script>
    <!-- FastClick -->
    <script src='../Content/plugins/fastclick/fastclick.min.js'></script>
    <script src="../Content/bootstrap/js/bootstrap.min.js" type="text/javascript"></script>
    <script src="../Content/ajax/raphael-min.js"></script>
    <script src="../Content/plugins/morris/morris.min.js" type="text/javascript"></script>
    <script src="../Content/plugins/sparkline/jquery.sparkline.min.js" type="text/javascript"></script>
    <script src="../Content/plugins/jvectormap/jquery-jvectormap-1.2.2.min.js" type="text/javascript"></script>
    <script src="../Content/plugins/jvectormap/jquery-jvectormap-world-mill-en.js" type="text/javascript"></script>
    <script src="../Content/plugins/knob/jquery.knob.js" type="text/javascript"></script>
    <script src="../Content/plugins/daterangepicker/daterangepicker.js" type="text/javascript"></script>
    <script src="../Content/plugins/datepicker/bootstrap-datepicker.js" type="text/javascript"></script>
    <script src="../Content/plugins/bootstrap-wysihtml5/bootstrap3-wysihtml5.all.min.js" type="text/javascript"></script>
    <script src="../Content/plugins/slimScroll/jquery.slimscroll.min.js" type="text/javascript"></script>
    <script src="../Content/plugins/fastclick/fastclick.min.js"></script>
    <script src="../Content/dist/js/app.min.js" type="text/javascript"></script>
   
    <script src="../Content/dist/js/demo.js" type="text/javascript"></script>
    <script src="../Content/plugins/timepicker/bootstrap-timepicker.min.js" type="text/javascript"></script>
     <script src="../Content/dist/js/pages/dashboard.js" type="text/javascript"></script>
     <script src='../Content/plugins/fastclick/fastclick.min.js'></script>
    <!-- AdminLTE App -->
    <script src="../Content/dist/js/app.min.js" type="text/javascript"></script>

   <script type="text/javascript">
       $(function () {
           $('#reservationtime').daterangepicker({ timePicker: true, timePickerIncrement: 30, format: 'MM/DD/YYYY h:mm A' });
       });
  
    </script>

    @RenderSection("scripts", required: false)
</body>
</html>
